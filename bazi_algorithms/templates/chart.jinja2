{% block pagestyles %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js"></script>
{% endblock %}

  {% block content %}
    <canvas id="myChart"></canvas>
  {% endblock %}

{% block additionalscripts %}
  <script>
      Chart.defaults.global.responsive = true;

var ctx = document.getElementById('myChart');
var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: [{% for item in chart_data[1] %}
                   "{{item}}",
                  {% endfor %}],

        datasets: [{
            label: 'Percentage (%)',
            data: [{% for item in chart_data[0] %}
                      {{item}},
                    {% endfor %}],
            backgroundColor: [
                'rgba(255, 206, 86, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(255, 99, 132, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderColor: [
                'rgba(255, 206, 86, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(255, 99, 132, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
        legend: {
    	display: false
        },
        scales: {
            yAxes: [{
                ticks: {
                    fontColor:["white"],
                    beginAtZero: true,
                    suggestedMax: 100,
                    fontSize: 18,
                    callback: function(value){return value+ "%"}
                },
                scaleLabel: {
                   display: true,
                   fontSize: 18,
                   fontColor: "#FFFFFF",
                   labelString: "Percentage (%)"
                },
                gridLines: {
                    color: "#000000"
                },
            }],
            xAxes: [{ticks: {fontSize: 18, fontColor: "#FFFFFF"}}]
        }
    }
});
</script>

{% endblock %}

