  <div class="min-h-screen flex">
    <div class="container flex-col">

    {% for message in get_flashed_messages() %}
      <div class="alert text-red-700 mb-4 bg-red-100 border border-red-400 text-center rounded justify-self-center pb-3 px-0.5">
        <button type="button" class="close text-4xl" data-dismiss="alert">&times;</button>
        {{ message }}
      </div>
    {% endfor %}

        <h1><strong>Great, your new password has been set !</strong></h1>
        
				<p>You can now use it to log in to your account. Redirecting after 3 seconds to login page...</p>
        <p><a class="hover:underline font-extrabold text-blue" href="{{ url_for('auth_bp.login') }}">Click here to login now.</a></p>

<script>
    setTimeout(function(){
        window.location.replace("/login");
    }, 3000);
</script>

    </div>
  </div>

