  <div class="min-h-screen flex">
    <div class="container max-w-md mx-auto flex-1 flex flex-col items-center justify-center">
    <div class="bg-indigo-400 px-6 py-8 rounded shadow-md text-black w-full">

    {% for message in get_flashed_messages() %}
      <div class="alert text-red-700 mb-4 bg-red-100 border border-red-400 text-center rounded justify-self-center pb-3 px-0.5">
        <button type="button" class="close text-4xl" data-dismiss="alert">&times;</button>
        {{ message }}
      </div>
    {% endfor %}

    <h1 class="mt-6 mb-8 text-3xl text-center">Log In</h1>

    <form method="POST">
      <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">

      <fieldset class="email text-lg block border border-grey-light w-full rounded mb-4">
        {{ form.email(placeholder='Email', class="w-full text-lg pl-2 py-3 rounded") }}
      </fieldset>

        <div class="mb-4 ">
        {% if form.email.errors %}
          <ul class="errors">
            {% for error in form.email.errors %}
              <li>{{ error }}</li>{% endfor %}
          </ul>
        {% endif %}
        </div>

              <fieldset class="password text-lg block border border-grey-light w-full rounded mb-4">
          {{ form.password(placeholder='Password', class="w-full text-lg pl-2  py-3 rounded") }}
        </fieldset>

              <div class="mb-4 ">
          {% if form.password.errors %}
          <ul class="errors text-red-700">
            {% for error in form.password.errors %}
            <li><h1>{{ error }}</h1></li>{% endfor %}
          </ul>
          {% endif %}
        </div>

      <div class="submit-button w-full text-center text-2xl">
        {{ form.submit(class="w-full bg-pink-200 pl-2 py-3 rounded hover:bg-pink-300") }}
      </div>

      <div class="login-signup text-xl text-grey-dark mt-12 md:mt-8">
      {%if request.args["next"] == "pay" %}
        <div>
          <span>Don't have an account? <a class="hover:underline font-extrabold text-blue" href="/signup?next=pay">Sign up</a>.</span>
        </div>
        <div>
          <a class="hover:underline font-extrabold text-blue" href="{{ url_for('auth_bp.forgot_password') }}">Forgot password ?</a>.</span>
        </div>
      {%else%}
        <div>
          <span>Don't have an account? <a class="hover:underline font-extrabold text-blue" href="{{ url_for('auth_bp.signup') }}">Sign up</a>.</span>
        </div>
        <div>
          <a class="hover:underline font-extrabold text-blue" href="{{ url_for('auth_bp.forgot_password') }}">Forgot password ?</a>
        </div>
      {%endif%}
      </div>
      

    </form>
      </div>
        </div>
  </div>

