  <div class="min-h-screen flex flex-col">
    <div class="container max-w-sm mx-auto flex-1 flex flex-col items-center justify-center px-2">
    <div class="bg-indigo-400 px-6 py-8 rounded shadow-md text-black w-full">

    {% for message in get_flashed_messages() %}
      <div class="alert text-red-700 mb-4 bg-red-100 border border-red-400 text-center rounded justify-self-center pb-3">
        <button type="button" class="close text-4xl" data-dismiss="alert">&times;</button>
        {{ message }}
      </div>
    {% endfor %}

    <h1 class="mt-6 mb-8 text-3xl text-center">Frogot your password ?</h1>
    <h3 class="mt-6 mb-8 text-3m text-center">Please enter your email and we will send you a link to reset your password</h3>

    <form method="POST" action="/forgot_password">
      {{ form.csrf_token }}

      <fieldset class="email text-lg block border border-grey-light w-full rounded mb-4">
        {{ form.email(placeholder='Email', class="w-full text-lg pl-2 py-3 rounded") }}
      </fieldset>

      <div class="mb-4 ">
      {% if form.email.errors %}
          <ul class="errors bg-blue-400 text-red-700">
            {% for error in form.email.errors %}
              <li>{{ error }}</li>{% endfor %}
          </ul>
        {% endif %}
        </div>

      <div class="submit-button w-full text-center text-2xl">
        {{ form.submit(class="w-full bg-pink-200 pl-2 py-3 rounded hover:bg-pink-300") }}
      </div>

    </form>
