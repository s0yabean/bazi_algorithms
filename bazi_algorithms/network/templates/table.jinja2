<div class="flex flex-col w-11/12 mx-auto mt-8 bg-white shadow-lg">
  <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
      <div class="shadow overflow-hidden border-b border-gray-200 rounded">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="text-black px-6 py-3 text-left text-m font-medium text-gray-500 uppercase tracking-wider">
                Name
              </th>
              <th scope="col" class="text-black px-6 py-3 text-left text-m font-medium text-gray-500 uppercase tracking-wider">
                Natal Stems
              </th>
              <th scope="col" class="text-black px-6 py-3 text-left text-m font-medium text-gray-500 uppercase tracking-wider">
                Natal Branches
              </th>
              <th scope="col" class="text-black px-6 py-3 text-left text-m font-medium text-gray-500 uppercase tracking-wider">
                Remarks
              </th>
            </tr>
          </thead>

          <tbody class="divide-y divide-gray-200">
            {% for i in range(table_data|length) %}
              <tr>
                <td class="text-black px-6 py-4 whitespace-nowrap text-lg">
                  {{table_data[i].contact_name}} 
                </td>
                </div>
                </td>
                <td class="text-black px-6 py-4 whitespace-nowrap text-lg">
                {% if table_data[i].hour_s ==  "" %}
                    <span class="font-bold">{{table_data[i].day_s}}</span>, {{table_data[i].month_s}}, {{table_data[i].year_s}}
                {% else %}
                    {{table_data[i].hour_s}}, <span class="font-bold">{{table_data[i].day_s}}</span>, {{table_data[i].month_s}}, {{table_data[i].year_s}}
                {% endif %}
                </td>
                <td class="text-black px-6 py-4 whitespace-nowrap text-lg">
                {% if table_data[i].hour_s ==  "" %}
                    <span class="font-bold">{{table_data[i].day_e}}</span>, {{table_data[i].month_e}}, {{table_data[i].year_e}}
                {% else %}
                    {{table_data[i].hour_e}}, <span class="font-bold">{{table_data[i].day_e}}</span>, {{table_data[i].month_e}}, {{table_data[i].year_e}}
                {% endif %}
                </td>
                <td class="text-black px-6 py-4 whitespace-nowrap text-lg">
                {%for r in remarks[i] %} 
                  {{r}} <br>
                {% endfor %}
                </td>
              </tr>
            {% endfor %}

          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<style type="text/css">
    tr:nth-child(even) {
  background-color: #CCF5AC;
}
</style>